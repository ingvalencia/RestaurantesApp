<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.gvalencia.restaurantesapp.ui.MainFragment"
        android:label="Restaurantes"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_restaurantesDetalleFragment2"
            app:destination="@id/restaurantesDetalleFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/restaurantesDetalleFragment"
        android:name="com.gvalencia.restaurantesapp.ui.RestaurantesDetalleFragment"
        android:label="detalle"
        tools:layout="@layout/fragment_restaurantes_detalle" />
</navigation>